{
  "name": "news-fetcher",
  "version": "1.0.0",
  "description": "AI News Aggregator from Reddit with Ollama Summarization",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=server",
    "test": "npm run test --workspace=server",
    "test:client": "echo \"Error: no test specified for client\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
