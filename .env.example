# Reddit API Configuration
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=news-fetcher-bot/1.0.0

# Mock specific news providers by listing them (e.g., MOCK_PROVIDERS=reddit,hackernews)
MOCK_PROVIDERS=reddit

# LLM Provider Configuration
# Choose your LLM provider: 'ollama' (local, free) or 'openai' (cloud, paid)
LLM_PROVIDER=ollama

# Ollama Configuration (for LLM_PROVIDER=ollama)
# For WSL: use Windows host IP (get with: ip route show | grep default | awk '{print $3}')
# For local: use http://localhost:11434
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b

# OpenAI Configuration (for LLM_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-5-mini

# LLM Request Logging (for cost monitoring)
LLM_LOGGING_ENABLED=true
LLM_LOG_PATH=./llm-requests.log

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info


# Database (Turso Cloud)
# Get your database URL: turso db show <db-name> --url
# Create auth token: turso db tokens create <db-name>
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# Active News Providers
ACTIVE_NEWS_PROVIDERS=reddit,hackernews
SUMMARY_MAX_ITEMS=40
SUMMARY_SOURCE_WEIGHTS={"reddit":1,"hackernews":1}
SUMMARY_SOURCE_QUOTAS={"reddit":0.5,"hackernews":0.3}

# Slack Integration (optional)
# Create a Slack app and bot at: https://api.slack.com/apps
SLACK_ENABLED=false
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_CHANNEL_ID=general
SLACK_AUTO_POST=true
