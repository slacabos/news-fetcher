# Reddit API Configuration
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=news-fetcher-bot/1.0.0

# Use mock data for testing (set to true if you don't have Reddit API access)
USE_MOCK_DATA=false

# LLM Provider Configuration
# Choose your LLM provider: 'ollama' (local, free) or 'openai' (cloud, paid)
LLM_PROVIDER=ollama

# Ollama Configuration (for LLM_PROVIDER=ollama)
# For WSL: use Windows host IP (get with: ip route show | grep default | awk '{print $3}')
# For local: use http://localhost:11434
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b

# OpenAI Configuration (for LLM_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# LLM Request Logging (for cost monitoring)
LLM_LOGGING_ENABLED=true
LLM_LOG_PATH=./llm-requests.log

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./news.sqlite

# AI Topic Configuration
AI_KEYWORDS=OpenAI,Claude,Nvidia,GPT,LLM,AI,Artificial Intelligence,Machine Learning,Deep Learning,Anthropic
AI_SUBREDDITS=MachineLearning,artificial,LocalLLaMA,OpenAI,singularity
